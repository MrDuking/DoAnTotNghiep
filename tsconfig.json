{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "Multer"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
